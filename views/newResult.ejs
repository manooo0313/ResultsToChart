<% include partials/header %>


<div class="container text-center">
    <div class="row">
        <h1 style="text-align: center">Add a Result to <%= competition.name %> Competition </h1>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/skaters/<%= competition.skater %>/competitions/<%= competition._id %>/results" method="POST">
                <div class="form-group">
                    Skill Race:
                    <input class="form-control" type="text" name="distanceResult[skillrace]">
                </div>
                <div class="form-group">
                    222m:
                    <input class="form-control" type="text" name="distanceResult[dist222m]">
                </div>
                <div class="form-group">
                    333m:
                    <input class="form-control" type="text" name="distanceResult[dist333m]">
                </div>
                <div class="form-group">
                    500m:
                    <input class="form-control" type="text" name="distanceResult[dist500m]">
                </div>
                <div class="form-group">
                    777m:
                    <input class="form-control" type="text" name="distanceResult[dist777m]">
                </div>
                <div class="form-group">
                    1000m:
                    <input class="form-control" type="text" name="distanceResult[dist1000m]">
                </div>
                <div class="form-group">
                    1500m:
                    <input class="form-control" type="text" name="distanceResult[dist1500m]">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Add Results</button>
                </div>
            </form>
            <a href="/skaters" class="btn btn-lg btn-secondary btn-block">Go Back</a>
        </div>
    </div>
</div>



<% include partials/footer %>
