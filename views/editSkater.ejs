<% include partials/header %>

<div class="container text-center">
     <h1>Edit Skater</h1>
    <div class="row">
        <div style="width:30%; margin: 50px auto;">   
            <form action="/skaters/<%= skater._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="skater[name]" placeholder="name" required value="<%= skater.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="skater[image]" placeholder="image url" value="<%= skater.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="skater[dateOfBirth]" placeholder="date of Birth" required value="<%= skater.dateOfBirth %>" > 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="btn btn-lg btn-secondary btn-block" href="/skaters">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>
