<% include partials/header %>


<div class="container text-center">
    <div class="row">
        <h1 style="text-align: center">Add a Competition to <%= skater.name %>'s Competition Collection</h1>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/skaters/<%= skater._id %>/competitions" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="competition[name]" placeholder="Competition Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="competition[date]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="competition[location]" placeholder="Competition Location">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Add Competition</button>
                </div>
            </form>
            <a href="/skaters">Go Back</a>
        </div>
    </div>
</div>



<% include partials/footer %>
