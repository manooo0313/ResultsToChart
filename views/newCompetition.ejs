<% include partials/header %>


<div class="container text-center">
    <div class="row">
        <h1 style="text-align: center">Add a Competition to <%= skater.name %>'s Competition Collection</h1>
        <div style="width: 40%; margin: 50px auto;">
            <form action="/skaters/<%= skater._id %>/competitions" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="competition[name]" placeholder="Competition Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="competition[date]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="competition[location]" placeholder="Competition Location">
                </div>
                <div class="form-group">
                    Skill Race:
                    <input class="form-control" type="text" name="competition[skillrace]" placeholder = "Please add results in miliseconds like: 1:32,543 = 92543">
                </div>
                <div class="form-group">
                    222m:
                    <input class="form-control" type="text" name="competition[dist222m]" placeholder = "Please add results in miliseconds like: 1:32,543 = 92543">
                </div>
                <div class="form-group">
                    333m:
                    <input class="form-control" type="text" name="competition[dist333m]" placeholder = "Please add results in miliseconds like: 1:32,543 = 92543">
                </div>
                <div class="form-group">
                    500m:
                    <input class="form-control" type="text" name="competition[dist500m]" placeholder = "Please add results in miliseconds like: 1:32,543 = 92543">
                </div>
                <div class="form-group">
                    777m:
                    <input class="form-control" type="text" name="competition[dist777m]" placeholder = "Please add results in miliseconds like: 1:32,543 = 92543">
                </div>
                <div class="form-group">
                    1000m:
                    <input class="form-control" type="text" name="competition[dist1000m]" placeholder = "Please add results in miliseconds like: 1:32,543 = 92543">
                </div>
                <div class="form-group">
                    1500m:
                    <input class="form-control" type="text" name="competition[dist1500m]" placeholder = "Please add results in miliseconds like: 1:32,543 = 92543">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Add Competition</button>
                </div>
            </form>
            <a class="btn btn-lg btn-secondary btn-block"  href="/skaters/<%= skater._id %>">Go Back</a>
        </div>
    </div>
</div>



<% include partials/footer %>
